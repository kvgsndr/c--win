<Window x:Class="totoGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:totoGUI"
        mc:Ignorable="d"
        Title="Totó eredmeny ellenörző" Height="230" Width="450">
    <Grid  >

        <Label Content="Kérem a forduló eredményeit [1, 2, X]:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="220"/>
        <CheckBox x:Name="chbxKarakterekSzama" Content="Nem megfelelő a karakterek száma (14)" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" IsEnabled="False" />
        <CheckBox x:Name="chbxHelytelenKarakterek" Content="Helytelen karakter az eredményben ()" HorizontalAlignment="Left" Margin="12,115,0,0" VerticalAlignment="Top" IsEnabled="False" />
        <Button x:Name="btMentes" Content="Eredmények mentése" HorizontalAlignment="Left" Margin="10,147,0,0" VerticalAlignment="Top" Width="159" Height="29"/>
        <TextBox x:Name="tbxEredmenyek" HorizontalAlignment="Left" Margin="10,41,0,0" Text="12X12X12X12X12" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" IsEnabled="True" TextChanged="tbxEredmenyek_TextChanged" FontSize="14"/>
    </Grid>
</Window>
