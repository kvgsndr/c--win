        xmlns:local="clr-namespace:EletjatekGUI"
        mc:Ignorable="d"
        Title="Életjáték álláskészítő" Height="600" Width="450">
    <Grid>
        <Label Content="Mátrix mérete [ sor x oszlop]" HorizontalAlignment="Left" Margin="31,42,0,0" VerticalAlignment="Top" Width="150"/>
        <ComboBox x:Name="cbxSor"  HorizontalAlignment="Left" Height="26" Margin="201,42,0,0" VerticalAlignment="Top" Width="62"/>
        <ComboBox x:Name="cbxOszlop" HorizontalAlignment="Left" Height="26" Margin="286,42,0,0" VerticalAlignment="Top" Width="62"/>
        <Button Content="Üres mátrix létrehozása" HorizontalAlignment="Left" Height="24" Margin="31,96,0,0" VerticalAlignment="Top" Width="152" Click="letrehoz_Click"/>
        <Button Content="Állás mentése" HorizontalAlignment="Left" Height="24" Margin="225,96,0,0" VerticalAlignment="Top" Width="123"/>

    </Grid>
</Window>
